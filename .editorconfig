# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,sh}]
indent_size = 4
indent_style = space

[*.{json,js,yml,yaml,less,ps1}]
indent_size = 2
indent_style = space

[*.{md,diff}]
trim_trailing_whitespace = false

[*.{pl,pm,t,PL}]
indent_size = 4
indent_style = space
max_line_length = off
